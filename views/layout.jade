doctype 5
html
  head
    title= 'Base Node app'
    link(rel='stylesheet', href="/stylesheets/simplegrid.css")
    link(rel='stylesheet', href="/stylesheets/#{stylesheet}.css")
  body
    div.grid.grid-pad
      #header
        h1= title

      - var flashTypes = ['info', 'error']
      each flashType in flashTypes
        if flash[flashType]
          p.flash(class=flashType)
            = flash[flashType]

      div.col-3-12
        | text

      div.col-9-12
        block content

    != js('application')
